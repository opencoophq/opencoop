# Database
DATABASE_URL=postgresql://opencoop:opencoop@localhost:5432/opencoop

# Redis
REDIS_URL=redis://localhost:6379

# Auth (custom JWT, not NextAuth)
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# API
API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3002

# SMTP (optional - per-coop SMTP settings override these)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@opencoop.be

# Field encryption (for nationalId)
# Generate with: openssl rand -hex 32
FIELD_ENCRYPTION_KEY=

# File Storage
UPLOAD_DIR=./uploads
