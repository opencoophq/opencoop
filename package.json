{
  "name": "opencoop",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "db:generate": "pnpm --filter @opencoop/database exec prisma generate",
    "db:push": "pnpm --filter @opencoop/database exec prisma db push",
    "db:migrate": "pnpm --filter @opencoop/database exec prisma migrate dev",
    "db:studio": "pnpm --filter @opencoop/database exec prisma studio",
    "db:seed": "pnpm --filter @opencoop/database exec prisma db seed",
    "clean": "turbo clean && rm -rf node_modules",
    "test:e2e": "cd e2e && npx playwright test",
    "test:e2e:ui": "cd e2e && npx playwright test --ui",
    "test:e2e:setup": "docker compose -f docker-compose.test.yml up -d && sleep 2 && DATABASE_URL=postgresql://opencoop:opencoop@localhost:5433/opencoop_test pnpm db:push && DATABASE_URL=postgresql://opencoop:opencoop@localhost:5433/opencoop_test pnpm db:seed"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
